#!/bin/sh
set -e

sudo mount hd.img mnt -o loop,offset=512
linkfile=/tmp/$$.linkfile
trap "sudo umount mnt; rm -f $linkfile" EXIT

rsync -av \
    --hard-links \
    --delete \
    --whole-file \
    --no-specials \
    --exclude 'dev' \
    --exclude 'etc/ttytab' \
    --exclude 'etc/mtab' \
    --exclude 'etc/utmp' \
    --exclude 'usr/adm' \
    --exclude 'boot' \
    mnt/ \
    fs/ \
    > $linkfile

awk '/ => / { print "ln -sfr ./" $3 " " $1 }' $linkfile | (cd fs && sh)
